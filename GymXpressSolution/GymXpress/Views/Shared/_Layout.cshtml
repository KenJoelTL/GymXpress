<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GymXpress</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GymXpress", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="AfficherCompte">
                        @Html.ActionLink("Compte", "Index", "Compte", new { area = "" }, new { @class = "navbar-brand" })
                            <i class="fa fa-fw fa-table"></i>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="AfficherPlan">
                        @Html.ActionLink("Plan d'entrainement", "Index", "Plan", new { area = "" }, new { @class = "navbar-brand" })
                        <i class="fa fa-fw fa-table"></i>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="AfficherPlan">
                        @Html.ActionLink("Dispo", "Index", "Dispo", new { area = "" }, new { @class = "navbar-brand" })
                        <i class="fa fa-fw fa-table"></i>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav-item" data-toggle="tooltip" data-placement="right" title="AfficherPlan">
                        @Html.ActionLink("Rendez-vous", "Index", "RendezVous", new { area = "" }, new { @class = "navbar-brand" })
                        <i class="fa fa-fw fa-table"></i>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - GymXpress</p>
            <span class="halfings halfings-user"></span>
            

        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>